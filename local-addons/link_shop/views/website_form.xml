<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="daily_report_form">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_website_form" data-vcss="001" data-snippet="s_website_form">
                    <div class="container">
                        <div class="row">
                            <div class="col text-center">
                              <h4 class="mt-4 text-primary">Báo cáo hàng ngày</h4>
                            </div>
                        </div>

                        <div class="row justify-content-center">
                            <div class="col-lg-7">
                                <form action="/daily-report/submit" method="post" enctype="multipart/form-data"
                                  class="o_mark_required" data-mark="*" data-model_name="" data-success-page="">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="s_website_form_rows row s_col_no_bgcolor">
                                        <div class="form-group col-12 s_website_form_field s_website_form_required"
                                             data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-form-label col-sm-auto s_website_form_label"
                                                       style="width: 200px" for="studio1">
                                                    <span class="s_website_form_label_content">Mã cửa hàng</span>
                                                    <span class="s_website_form_mark">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="shop_id" t-att-value="shop_id" type="text" class="form-control s_website_form_input"
                                                           name="shop_id" required="1"/>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group col-12 s_website_form_field s_website_form_required"
                                             data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-form-label col-sm-auto s_website_form_label"
                                                       style="width: 200px" for="studio1">
                                                    <span class="s_website_form_label_content">Doanh số trong ngày</span>
                                                    <span class="s_website_form_mark">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="trade_volume" t-att-value="trade_volume" type="number" class="form-control s_website_form_input"
                                                           name="trade_volume"/>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                                            <div style="width: 200px;" class="s_website_form_label"/>
                                            <button type="submit" class="btn btn-primary">Gửi</button>
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </section>
            </div>
        </t>
    </template>

    <record id="user_thank" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/thank-you</field>
        <field name="website_published">True</field>
        <field name="key">link_shop.user_thank</field>
        <field name="arch" type="xml">
            <t name="Thanks" t-name="link_shop.user_thank">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="container">
                            <h1>Thành Công!</h1>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="alert alert-success" role="status">
                                        Báo cáo đã gửi thành công
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>