<odoo>
    <data>
        <record id="mes_bom_form" model="ir.ui.view">
            <field name="name">mes.bom.form.view.inherit</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="time_process" widget="float_time"/>
                    <field name="consumption"/>
                    <field name="waste_percent" widget="percentage"/>
                    <field name="ng_percent" widget="percentage"/>
                    <field name="created_by"/>
                </xpath>
                <xpath expr="//field[@name='product_qty']" position="after">
                    <field name="bom_uom"/>
                </xpath>
                <page name="components" position="before">
                    <page string="Technical Process" name="bom_technical_process">
                        <field name="tech_process_ids">
                            <tree>
                                <field name="name"/>
                                <field name="sequence"/>
                                <field name="ng_percent" widget="percentage"/>
                            </tree>
                        </field>
                    </page>
                </page>
                <page name="components" position="after">
                    <page string="Worker Group" name="bom_worker_group">
                        <field name="worker_group_ids">
                            <tree>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="expertise_level"/>
                                <field name="worker_ids"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

        <!--        MENU ITEMS-->
        <record id="tech_process_action" model="ir.actions.act_window">
            <field name="name">Technological Process</field>
            <field name="res_model">tech.process</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="tech_sequence_action" model="ir.actions.act_window">
            <field name="name">Sequence</field>
            <field name="res_model">tech.sequence</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_mes_tech_process"
                  parent="mrp.menu_mrp_configuration"
                  name="Technical Process"
                  action="tech_process_action"
                  sequence="30"/>


        <!--        TECHNICAL PROCESS VIEW (TREE, FORM)-->

        <record id="tech_process_view_form" model="ir.ui.view">
            <field name="name">tech.process.view.form</field>
            <field name="model">tech.process</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                        <field name="use_material"/>
                        <field name="use_machine"/>
                    </group>
                    <group>
                        <field name="sequence"/>
                        <field name="parent_process"/>
                        <field name="ng_percent" widget="percentage"/>
                        <field name="consumption_percent" widget="percentage"/>
                        <field name="bom_ids" widget="many2many_tags"/>
                        <field name="image" widget="image"/>
                        <field name="documents" filename="document_name"/>
                        <field name="document_name" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Input Components" name="input_components" attrs="{'invisible':[('use_material', '=', False)]}">
                            <group>
                                <group>
                                    <field name="input_description"/>
                                </group>
                            </group>
                            <field name="input">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Child Process" name="child_process">
                            <field name="child_process_ids"/>
                        </page>
                        <page string="Output" name="output">
                            <group>
                                <field name="sfg"/>
                                <field name="output"/>
                                <field name="output_description"/>
                            </group>
                        </page>
                        <page string="Worker Group" name="worker_group" attrs="{'invisible':[('use_machine', '=', False)]}">
                            <field name="worker_group_ids" >
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="expertise_level"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="tech_process_view_tree" model="ir.ui.view">
            <field name="name">tech.process.view.tree</field>
            <field name="model">tech.process</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="input_description"/>
                    <field name="output_description"/>
                    <field name="sequence"/>
                    <field name="image"/>
                    <field name="ng_percent" widget="percentage"/>
                    <field name="consumption_percent" widget="percentage"/>
                    <field name="bom_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>