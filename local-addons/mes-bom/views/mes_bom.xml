<odoo>
    <data>
        <record id="mes_bom_form" model="ir.ui.view">
            <field name="name">mes.bom.form.view.inherit</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="time_process" widget="float_time"/>
                    <field name="waste_percent" widget="percentage"/>
                    <field name="ng_percent" widget="percentage"/>
                    <field name="created_by"/>
                </xpath>
                <page name="components" position="before">
                    <page string="Technical Process" name="bom_technical_process">
                        <field name="tech_process_ids">
                            <tree>
                                <field name="name"/>
                                <field name="tech_stage_ids" widget="many2many_tags"/>
                                <field name="sequence"/>
                                <field name="ng_percent" widget="percentage"/>
                            </tree>
                        </field>
                    </page>
                </page>
                <page name="components" position="after">
                    <page string="Worker Group" name="bom_worker_group">
                        <field name="worker_group_ids">
                            <tree>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="expertise_level"/>
                                <field name="capacity"/>
                                <field name="worker_ids"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

        <!--        MENU ITEMS-->
        <record id="tech_process_action" model="ir.actions.act_window">
            <field name="name">Technological Process</field>
            <field name="res_model">tech.process</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="tech_stage_action" model="ir.actions.act_window">
            <field name="name">Technological Stage</field>
            <field name="res_model">tech.stage</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="tech_sequence_action" model="ir.actions.act_window">
            <field name="name">Sequence</field>
            <field name="res_model">tech.sequence</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="menu_mes_tech_process"
                  parent="mrp.menu_mrp_configuration"
                  name="Technical Process"
                  action="tech_process_action"
                  sequence="30"/>

        <menuitem id="menu_mes_tech_stage"
                  parent="mrp.menu_mrp_configuration"
                  name="Technical Stages"
                  action="tech_stage_action"
                  sequence="40"/>


        <!--        TECHNICAL PROCESS VIEW (TREE, FORM)-->

        <record id="tech_process_view_form" model="ir.ui.view">
            <field name="name">tech.process.view.form</field>
            <field name="model">tech.process</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="ng_percent" widget="percentage"/>
                            <field name="bom_id"/>
                            <field name="image" widget="image"/>
                            <field name="documents" filename="document_name"/>
                            <field name="document_name" invisible="1"/>
                        </group>
                    </sheet>
                    <sheet>
                        <notebook>
                            <page string="Technical Stages" name="technical_stages">
                                <field name="tech_stage_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="description"/>
                                        <field name="machine_ids"/>
                                        <field name="consumption"/>
                                        <field name="waste_percent" widget="percentage"/>
                                        <field name="sequence"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Input Components" name="input_components">
                                <group>
                                    <group>
                                        <field name="input_description"/>
                                    </group>
                                </group>
                                <field name="input">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Output" name="output">
                                <group>
                                    <field name="sfg"/>
                                    <field name="output"/>
                                    <field name="output_description"/>
                                </group>
                            </page>
                            <page string="Worker Group" name="worker_group">
                                <field name="worker_group_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="expertise_level"/>
                                        <field name="capacity" widget="float_time"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tech_process_view_tree" model="ir.ui.view">
            <field name="name">tech.process.view.tree</field>
            <field name="model">tech.process</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="input_description"/>
                    <field name="output_description"/>
                    <field name="sequence"/>
                    <field name="image"/>
                    <field name="ng_percent" widget="percentage"/>
                    <field name="bom_id"/>
                </tree>
            </field>
        </record>


        <!--        TECHNICAL STAGE VIEW (TREE, FORM)-->
        <record id="tech_stage_view_form" model="ir.ui.view">
            <field name="name">tech.stage.view.form</field>
            <field name="model">tech.stage</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                        <field name="machine_ids"/>
                    </group>
                    <group>
                        <field name="sequence"/>
                        <field name="waste_percent" widget="percentage"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="tech_stage_view_tree" model="ir.ui.view">
            <field name="name">tech.stage.view.tree</field>
            <field name="model">tech.stage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="machine_ids"/>
                    <field name="sequence"/>
                    <field name="waste_percent" widget="percentage"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>